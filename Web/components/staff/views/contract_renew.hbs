<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <h1 class="font-italic">
        <p class="text-center">Contracts waiting to be extended</p>
      </h1>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">

            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tax ID</th>
                    <th>Expired date</th>
                    <th>Commission</th>
                    <th>Branch</th>
                    <th>State</th>
                    <th> </th>
                  </tr>
                </thead>
                <tbody>
                  {{#each data}}
                    <tr>
                      <td>{{this.MaHopDong}}</td>
                      <td>{{this.MaSoThue}}</td>
                      <td>{{this.ThoiGianHieuLuc}}</td>
                      <td>{{this.PhanTramHoaHong}}</td>
                      <td>{{this.SoChiNhanhDangKy}}</td>
                      <td>{{this.TinhTrang}}</td>
                      <td class="project-actions text-md-center">
                          <input name="btnSubmit" type="submit"
                          class="btn btn-success btn-sm"
                          onClick="return getNewDate({{this.MaHopDong}})"
                          value="Extend">
                          </input>

                          <a class="btn btn-info btn-sm" href="/staff/mail/{{this.MaHopDong}}">
                             <i class="fas fa-envelope"></i>
                                  Email
                          </a>
                      </td>
                    </tr>
                  {{/each}}

                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
    function getNewDate(id) {
      let retVal = prompt("Nhập thời hạn mới cho hợp đồng:","yyyy-mm-dd");
       window.location.href=`/staff/update_time?idVal=${id}&retVal=${retVal}`
       }
</script>
