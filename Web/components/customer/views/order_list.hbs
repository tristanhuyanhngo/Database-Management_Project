<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <h1 class="font-italic">
        <p class="text-center">Status orders of Mr.{{customer_name}}</p>
      </h1>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            {{!-- <div class="card-header">
              <h4 class="card-title danger text-center">Your working area:
                {{area_id}}</h4>
            </div> --}}
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped text-center">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Ordered date</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Payment</th>
                    <th>Details</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each orders}}
                    <tr>
                      <td>{{this.MaDonHang}}</td>
                      <td>{{format_date this.NgayDat}}</td>
                      <td>{{format_number this.TongTien}} Ä‘</td>
                      <td>{{this.TinhTrang}}</td>
                      <td>{{this.HinhThucThanhToan}}</td>
                      <td class="project-actions text-md-center">
                        <form method="POST" action="/drive/order_list/{{this.MaDonHang}}?_method=POST">
                          <a class="btn btn-info btn-sm" href="/drive/order_list/{{this.MaDonHang}}">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Details
                          </a>
                        </form>
                      </td>
                    </tr>
                  {{/each}}

                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
