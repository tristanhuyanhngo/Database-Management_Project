<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
          <div class="card">
            <div class="card-header primary">
              <h4 class="card-title primary text-center">Order
                {{one.MaDonHang}}</h4>
            </div>

            <div class="card-body">
              <form method="POST" action="/driver/received_list/{{one.MaDonHang}}">
                <dl class="row">
                  <dt class="col-sm-3">Name:</dt>
                  <dd class="col-sm-9">{{one.TenDonHang}}</dd>

                  <dt class="col-sm-3">Product price:</dt>
                  <dd class="col-sm-9">{{one.PhiSanPham}}đ</dd>

                  <dt class="col-sm-3">Shipping fee:</dt>
                  <dd class="col-sm-9">{{one.PhiVanChuyen}}đ</dd>

                  <dt class="col-sm-3">Customer ID:</dt>
                  <dd class="col-sm-9">{{one.MaKhachHang}}</dd>

                  <dt class="col-sm-3">Partner ID:</dt>
                  <dd class="col-sm-9">{{one.MaSoThue}}</dd>

                  <dt class="col-sm-3">Address:</dt>
                  <dd class="col-sm-9">{{one.DiaChiGiaoHang}}</dd>

                  <dt class="col-sm-3">Payment:</dt>
                  <dd class="col-sm-9">{{one.HinhThucThanhToan}}</dd>

                  <dt class="col-sm-3">State: </dt>
                  <dd class="col-sm-9">

                    <select
                      class="custom-select rounded-0"
                      id="state"
                      name="state"
                    >
                      <option>Đã giao</option>
                      <option>Đang giao</option>
                      <option>Chờ</option>
                    </select>
                  </dd>
                </dl>

                <div class="text-center">
                  <button
                    class="btn btn-info btn-lg btn-block"
                    type="submit"
                  >
                    Save changes
                  </button>
                </div>
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->