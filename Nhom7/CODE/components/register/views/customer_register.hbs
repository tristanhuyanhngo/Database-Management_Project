{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

<form id="frmRegister" method="POST" action="/register/customer">
  <div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Sign up as a customer</h1>
          </div>

        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <div class="row">
              <!-- Form Element sizes -->
              <div class="card">
                <img src="../public/customer_register.png" class="img-fluid" alt="customer_register.png">
              </div>
            </div>
            <!-- /.card -->

          </div>
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Customer's form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/register/driver" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="fullname"><strong>Full Name</strong></label>
                    <input required name="fullname" type="text" class="form-control" placeholder="Enter full name" id="main">
                  </div>
                  <div class="form-group">
                    <label for="phone"><strong>Phone number</strong></label>
                    <input required name="phone" type="text" class="form-control" placeholder="Enter phone number">
                  </div>
                  <div class="form-group">
                    <label for="address"><strong>Home address</strong></label>
                    <input required name="address" type="text" class="form-control" placeholder="Enter home address">
                  </div>
                  <div class="form-group">
                    <label for="email"><strong>Email</strong></label>
                    <input required name="email" type="email" class="form-control"  placeholder="Enter email">
                  </div>
                  <div class="form-group">
                    <label for="username"><strong>Username</strong></label>
                    <input required name="username" type="text" class="form-control" placeholder="Enter username">
                  </div>
                  <div class="form-group">
                    <label for="pass"><strong>Password</strong></label>
                    <input required name="pass" type="password" class="form-control" placeholder="Enter password">
                  </div>
                  <div class="form-group">
                    <label for="confirm_pass"><strong>Confirm Password</strong></label>
                    <input required name="confirm_pass" type="password" class="form-control" placeholder="Confirm password">
                  </div>
                  <div class="form-check">
                    <input required type="checkbox" class="form-check-input" >
                    <label class="form-check-label" for="exampleCheck1">I have read and accept the terms and conditions</label>
                  </div>
                </div>
                <!-- /.card-body -->
                <p>{{messages.mess}}</p>
                <div class="card-footer text-md-center">
                  <button type="submit" class="btn btn-primary btn-block">SIGN UP</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
          <!-- right column -->

          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </div>
  </div>
  <!-- /.content-wrapper -->
</form>
